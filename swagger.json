{
    "openapi": "3.1.0",
    "info": {
        "title": "API de filmes",
        "version": "1.0.0",
        "description": "Documentação da API de filmes"
    },
    "paths": {
        "/list": {
            "get": {
                "summary": "Obtém a lista de filmes",
                "responses": {
                    "200": {
                        "description": "Lista de filme recuperada com sucesso",
                        "content": {
                            "application/json": {
                                "example": [
                                    {
                                        "id": 1,
                                        "title": "pirates of the caribbean",
                                        "description": "pirate movie",
                                        "trailer": "https://www.youtube.com/watch?v=1xo3af_6_Jk",
                                        "genero": "adventure"

                                    },
                                    {
                                        "id": 2,
                                        "title": "the lord of the rings",
                                        "description": "a magic movie",
                                        "trailer": "https://www.youtube.com/watch?v=1xo3af_6_Jk",
                                        "genger": "magic"
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        },
        "/insert": {
            "post": {
                "summary": "Adiciona um novo Filme",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "example": {
                                "title": "Novo Filme",
                                "description": "Filme de ação",
                                "trailer": "https://www.youtube.com/watch?v=1xo3af_6_Jk",
                                "genero": "action"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "filme adicionado com sucesso",
                        "content": {
                            "application/json": {
                                "example": {
                                    "id": 3,
                                    "title": "Novo Filme",
                                    "description": "Filme de ação",
                                    "trailer": "https://www.youtube.com/watch?v=1xo3af_6_Jk",
                                    "genero": "action"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro ao adicionar filme",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Filme já cadastrado"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/delete/id": {
            "delete": {
                "summary": "Deleta um filme",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID do filme a ser deletado",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Filme deletado com sucesso"
                    }
                }
            }
        },
        "/update/id": {
            "put": {
                "summary": "Atualiza um filme",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID do filme a ser atualizado",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "example": {
                                "name": "Filme Atualizado"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Filme atualizado com sucesso",
                        "content": {
                            "application/json": {
                                "example": {
                                    "id": 1,
                                    "name": "Filme Atualizado"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}